Page {
  width: 100%;
  height: 100%;
  /* background: linear-gradient(#a69dd0, #ffffff); */
  background-color: #ab9fd0;
}
.login-header {
  width: 100%;
  /* height: 500rpx; */
  /* background-color: pink; */
}
.login-header image {
  width: 100%;
  height: 100%;
}
.login-main {
  margin-top: 80rpx;
}
.login-main .login-main-login {
  width: 60%;
  background-color: #76d4d4;
  border-radius: 50rpx;
  color: #ffffff;
  font-weight: 700;
}
.login-main .login-main-usephone {
  width: 50%;
  margin: 0 auto;
  text-align: center;
  font-size: 26rpx;
  margin-top: 10rpx;
  opacity: 0.6;
}
.login-main .login-main-phone input {
  width: 450rpx;
  height: 65rpx;
  margin: 0 auto;
  /* text-align: center; */
  letter-spacing: 1rpx;
  padding-left: 0.5rem;
  padding-top: 0.2rem;
  font-size: 26rpx;
  background-color: #ffffff;
}
.login-main .login-main-code {
  width: 61%;
  /* background-color: pink; */
  height: 40rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.login-main .login-main-code input {
  width: 200rpx;
  height: 55rpx;
  letter-spacing: 1rpx;
  padding-left: 0.5rem;
  padding-top: 0.2rem;
  font-size: 20rpx;
  background-color: #ffffff;
}
.login-main .login-main-code button {
  width: 180rpx;
  height: 55rpx;
  font-size: 24rpx;
}
.login-main .login-main-notice {
  /* background-color: pink; */
  width: 50%;
  margin: 0 auto;
  font-size: 26rpx;
  margin-top: 40rpx;
  opacity: 0.8;
}
.login-main .login-main-notice span {
  color: red;
}
.login-main .login-btn {
  width: 60%;
  background-color: #76d4d4;
  border-radius: 50rpx;
  color: #ffffff;
  font-weight: 700;
  margin-top: 20rpx;
}
