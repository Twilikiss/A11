/* pages/teletextConverter/teletextConverter.wxss */
Page {
  width: 100%;
  height: 100%;
  background: linear-gradient(#c2aeff, #ffffff);
}

.teletextConverter-header {
  text-align: center;
  width: 750rpx;
  height: 350rpx;
  background-color: #eee;
  border: 1px dashed #000;
  line-height: 350rpx;
  font-size: 50rpx;
  color: #000;
}
.teletextConverter-main {
  font-size: 30rpx;
}
.teletextConverter-main .teletextConverter-main-success {
  height: 50rpx;
  /* background-color: pink; */
  margin-bottom: 20rpx;
  font-size: 34rpx;
}
.teletextConverter-main .teletextConverter-main-creatTime,
.teletextConverter-main .teletextConverter-main-endTime {
  height: 50rpx;
  /* background-color: pink; */
  margin-bottom: 10rpx;
  font-size: 28rpx;
  opacity: 0.8;
}
.teletextConverter-main .teletextConverter-main-url {
  word-wrap: break-word;
  font-size: 20rpx;
  line-height: 50rpx;
  opacity: 0.5;
}
.teletextConverter-main .teletextConverter-main-copy {
  font-size: 38rpx;
  line-height: 80rpx;
  font-weight: 700;
}
