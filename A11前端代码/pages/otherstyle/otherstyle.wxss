/* pages/otherstyle/otherstyle.wxss */
Page {
  width: 100%;
  height: 100%;
  background: linear-gradient(#c2aeff, #ffffff);
}
.otherstyle-header {
  width: 100%;
  font-weight: 700;
  font-size: 40rpx;
  color: #eee;
}
.otherstyle-select {
  width: 90%;
  height: 150rpx;
  line-height: 100rpx;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  background-color: white;
  margin-top: 20rpx;
  box-shadow: 10px 5px 10px #c8c8c8;
}
.otherstyle-select .otherstyle-select-text {
  width: 190rpx;
  height: 60rpx;
  background-color: rgb(169, 177, 220);
  line-height: 60rpx;
  text-align: center;
  color: #eee;
  margin-left: 30rpx;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-evenly;
}
.otherstyle-select .otherstyle-select-text text {
  width: 40rpx;
  height: 100%;
  color: #eee;
}
.otherstyle-main {
  width: 100%;
  height: 320rpx;
  /* background-color: pink; */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
}
.otherstyle-main .otherstyle-item {
  width: 300rpx;
  height: 60rpx;
  background-color: rgb(169, 177, 220);
  line-height: 60rpx;
  margin-top: 40rpx;
  text-align: center;
  color: #eee;
}
.otherstyle-btn {
  width: 500rpx;
  height: 90rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  display: flex;
  justify-content: space-evenly;
}
button {
  width: 200rpx;
  height: 100%;
  line-height: 95rpx;
}
