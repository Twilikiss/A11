Page {
  width: 100%;
  height: 100%;
  background: linear-gradient(#c2aeff, #ffffff);
}
.draws-title {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  /* background-color: pink; */
  font-size: 36rpx;
}
.draws-image {
  width: 100%;
  height: 500rpx;
  /* background-color: pink; */
}
.draws-image image {
  width: 100%;
  width: 100%;
}
.draws-width,
.draws-height,
.draws-conclusion {
  width: 100%;
  /* height: 100rpx; */
  line-height: 80rpx;
}
.draws-btn {
  width: 100%;
  height: 200rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-evenly;
}
.draws-btn button {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.draws-appraise {
  width: 600rpx;
  height: 700rpx;
  background-color: rgba(255, 255, 255);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.draws-appraise .draws-appraise-title {
  width: 100%;
  height: 80rpx;
  font-size: 48rpx;
  text-align: center;
}
.draws-appraise .draws-appraise-evaluation,
.draws-appraise .draws-appraise-isUsePromptGen,
.draws-appraise .draws-appraise-prompt {
  /* width: 100%; */
  /* margin: 0 auto; */
  margin-left: 30rpx;
}
.draws-appraise .draws-appraise-prompt .draws-appraise-prompt-text {
  width: 90%;
  height: 200rpx;
  /* text-indent: 1rem; */
  font-size: 30rpx;
  /* box-shadow: 10rpx 10rpx 10rpx; */
  background-color: rgba(46, 46, 46, 0.2);
}
.draws-appraise .draws-appraise-btn {
  width: 80%;
  margin: 0 auto;
  display: flex;
  justify-content: space-evenly;
}
.draws-appraise .draws-appraise-btn button {
  width: 35%;
}
